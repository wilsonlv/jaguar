<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jaguar.modules.workflow.mapper.DraftDefinitionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jaguar.modules.workflow.model.po.DraftDefinition">
        <result column="id_" property="id"/>
        <result column="element_id" property="elementId"/>
        <result column="name_" property="name"/>
        <result column="definition_type" property="definitionType"/>
        <result column="context_" property="context"/>
        <result column="version_" property="version"/>
    </resultMap>

    <select id="queryLatest" resultMap="BaseResultMap">
        SELECT a.id, a.element_id, a.name_, a.definition_type, a.version_
        FROM jaguar_modules_workflow_draft_definition a
        RIGHT JOIN
        (SELECT name_, MAX(version_) AS max_version FROM jaguar_modules_workflow_draft_definition GROUP BY name_) b
        ON a.name_ = b.name_ and a.version_ = b.max_version
        <where>
            <if test="p.name != null and p.name != ''">
                AND a.name_ = #{p.name}
            </if>
            <if test="p.fuzzyName != null and p.fuzzyName != ''">
                AND a.name_ LIKE CONCAT('%', #{p.fuzzyName}, '%')
            </if>
            <if test="p.definitionType != null and p.definitionType != ''">
                AND a.definition_type = #{p.definitionType}
            </if>
            AND a.deleted_ = 0
        </where>
    </select>

</mapper>
