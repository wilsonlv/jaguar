<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itqingning.lucy.process.mapper.FormDataMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jaguar.modules.workflow.model.po.FormData">
        <result column="process_info_id" property="processInfoId"/>
        <result column="form_template_id" property="formTemplateId"/>
        <result column="form_template_sheet_id" property="formTemplateSheetId"/>
        <result column="form_template_field_id" property="formTemplateFieldId"/>
        <result column="form_data_persistence_type" property="formDataPersistenceType"/>
        <result column="field_key" property="fieldKey"/>
        <result column="value_" property="value"/>
        <result column="batch_num" property="batchNum"/>
    </resultMap>

    <select id="getByKeyAndValueInProcessDefinition" resultMap="BaseResultMap">
          SELECT d.* FROM t_process_form_data d
          INNER JOIN t_process_info info on info.id = d.process_info_id
          INNER JOIN act_re_procdef def on def.ID_ = info.process_definition_id
          WHERE def.NAME_ = #{processDefinitionName} AND d.field_key = #{key} AND d.value_ = #{value}
            AND info.deleted_ = 0
          LIMIT 0, 1
    </select>
</mapper>
